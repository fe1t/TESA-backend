{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        // "outDir": ".next",
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"],
            "config/*": ["config/*"],
            "common/*": ["src/common/*"],
            "modules/": ["src/modules/*"],
        },
        "plugins": [{
            "name": "typescript-styled-plugin",
            "validate": false
        }]
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "node_modules"]
}